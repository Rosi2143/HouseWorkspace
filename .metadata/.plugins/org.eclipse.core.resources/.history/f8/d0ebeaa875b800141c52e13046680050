#ifndef TIME_H_
#define TIME_H_

#include "iTime.h"

typedef struct PressTime {
   int ShortPressTimeMs;
   int LongPressTimeMs;
   int VeryLongPressTimeMs;
   int JammedPressTimeMs;
} PressTime;

class Time: public iTime {
   public:
      Time() {
      }
      ;
      virtual ~Time() {
      }
      virtual ptime getCurrentTime() const {
         return microsec_clock::local_time();
      }
      PressTime _PressTime;
};

#endif /* TIME_H_ */
