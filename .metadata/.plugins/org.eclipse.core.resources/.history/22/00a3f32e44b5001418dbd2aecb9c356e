#ifndef LIGHT_H_
#define LIGHT_H_

#include <string>
#include <list>
#include <iostream>

#include "Base.h"

typedef enum LightState {
   LightOn, LightOff
} LightState;

class Room;

class Light: public Base {
   public:
      // Constructors
      Light(unsigned int _Id, std::string _Name, const Room* _pRoom);
      Light(const Light& _light);  // copy constructor
      virtual ~Light() {
      }

      // Operators
      Room& operator=(Room other);

      // access functions
      LightState getState() const {
         return _State;
      }
      LightState toggleState();

      // construction functions
   protected:
      Light(): Base(0, ""), _State(LightOff), _pRoom(nullptr) {
         std::cout << "Wrong default constructor Light";
      }
      LightState _State;
      Room* _pRoom;
};

#endif /* LIGHT_H_ */
