#ifndef BLINDSWITCHIN_H
#define BLINDSWITCHIN_H

#include <string>
#include <list>

#include "iBlind.h"

class Blind : public iBlind{
public:
      Blind(unsigned int _Id, std::string _Name, iRoom* _pRoom);
      ~Blind();

      // Operators
      Blind& operator=(const Blind& other);    // assignment operator

      // access functions
      BlindState  getState() const {return State;}
      BlindState  moveUp();
      BlindState  moveDown();

      // construction functions
protected:
      BlindState  State;
};

#endif /* BLINDSWITCHIN_H */
