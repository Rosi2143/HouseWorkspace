#ifndef SWITCH_H
#define SWITCH_H

#include <string>
#include <list>

enum SwitchState
{
   SwitchUp,
   SwitchMovingDown,
   SwitchDown,
   SwitchMovingUp,
   SwitchSomeWhere
}SwitchState;

class Switch {
public:
      Switch();
      ~Switch();

      // access functions
      std::string getName() const {return Name;}
      SwitchState  getState() const {return State;}

      // construction functions
      void addFloor(const Floor& _Floor);
protected:
      SwitchState  State;
      std::string Name;
};

#endif /* SWITCH_H */
