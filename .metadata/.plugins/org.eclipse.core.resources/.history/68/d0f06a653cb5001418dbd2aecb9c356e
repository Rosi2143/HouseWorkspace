#include "Room.h"

Room::Room(unsigned int Id, std::string Name, const Floor* Floor) :
      Base(Id, Name), _State(Unknown), _pFloor(_pFloor) {
   _Lights.clear();
   _Heaters.clear();
   _Blinds.clear();
   _Switches.clear();
}

Room::Room(const Room &_Room) :
      Base(_Room.Id, _Room.Name), State(_Room.State), pRoom(
            _Room.pRoom), RoomActionMap(_Room.RoomActionMap) {

}

Room& Room::operator=(Room other) {
   if (&other == this) {
      return *this;
   }
   State = other.State;
   RoomActionMap = other.RoomActionMap;
   pRoom = other.pRoom;
   return *this;
}
