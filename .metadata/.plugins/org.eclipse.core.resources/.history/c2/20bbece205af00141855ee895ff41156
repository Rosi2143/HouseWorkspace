#ifndef BLIND_H
#define BLIND_H

#include <string>
#include <list>

enum BlindState
{
   BlindUp,
   BlindMovingDown,
   BlindDown,
   BlindMovingUp,
   BlindSomeWhere
}BlindState;

class Room;

class Blind {
public:
      Blind();
      ~Blind();

      // access functions
      std::string getName() const {return Name;}
      BlindState  getState() const {return State;}
      BlindState  moveUp();
      BlindState  moveDown();

      // construction functions
protected:
      BlindState  State;
      std::string Name;
};

#endif /* BLIND_H */
