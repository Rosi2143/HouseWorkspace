#ifndef SWITCH_H
#define SWITCH_H

#include <string>
#include <list>

enum SwitchState
{
   Released,
   Pressed,
   LongPressed,
   VeryLongPressed,
   Jammed
}SwitchState;

typedef int (*t_SwitchActionFunction)(/*int,int*/);

class Switch {
public:
      Switch(unsigned int _Id, std::string _Name);
      ~Switch();

      // access functions
      std::string getName() const {return Name;}
      SwitchState getState() const {return State;}

      // construction functions
      void addAction(const SwitchState& state, t_SwitchActionFunction _function);
protected:
      SwitchState  State;
      std::string  Name;
      unsigned int Id;
      std::map<SwitchState, t_SwitchActionFunction>;
};

#endif /* SWITCH_H */
