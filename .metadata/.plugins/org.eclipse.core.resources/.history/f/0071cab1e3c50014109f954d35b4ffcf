#ifndef HEATER_H
#define HEATER_H

#include <string>
#include <list>
#include <iostream>

#include "iHeater.h"

class Heater: public iHeater {
public:
      // Constructors
      Heater(unsigned int Id, std::string Name, iRoom* pRoom);
      Heater(const Heater& heater);  // copy constructor
      virtual ~Heater(){}

      // Operators
      Heater& operator=(const Heater& other);

      // access functions
      virtual HeaterState  getState() const {return _State;}
      virtual HeaterState  toggleState();

      // construction functions
protected:
      Heater(): Base(0, "", nullptr), _State(HeaterOff) {
         std::cout << "Wrong default constructor Heater";
      }
      HeaterState  _State;
};

#endif /* HEATER_H */
