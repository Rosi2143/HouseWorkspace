#ifndef LIGHTSWITCHIN_H_
#define LIGHTSWITCHIN_H_

#include <string>
#include <list>
#include <iostream>

#include "iLight.h"

class iRoom;

class Light: public iLight {
   public:
      // Constructors
      Light(unsigned int Id, std::string Name, iRoom* pRoom);
      Light(const Light& light);  // copy constructor
      virtual ~Light() {
      }

      // Operators
      Light& operator=(const Light& other);

      // access functions
      LightState getState() const {
         return _State;
      }
      LightState toggleState();

      // construction functions
   protected:
      Light(): iLight(), _State(LightOff){
         std::cout << "Wrong default constructor Light";
      }
      LightState _State;
};

#endif /* LIGHTSWITCHIN_H_ */
