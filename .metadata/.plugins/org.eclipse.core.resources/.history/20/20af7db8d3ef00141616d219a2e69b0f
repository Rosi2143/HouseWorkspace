#pragma once

#include <stdint.h>

class iTimer {
   public:
      iTimer(){};
      virtual ~iTimer(){}
      virtual int start_timer(int, int, void (*)(void)) = 0;
      virtual void stop_timer(void) = 0;
      virtual int32_t getNextTimerDelay();
};

