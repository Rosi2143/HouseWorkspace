#ifndef INODE_H_
#define INODE_H_

#include "wiringPi.h"

class INode{
public:
	virtual wiringPiNodeStruct* getNode() =  0;
	virtual int  readPort(int pin) =  0;
	virtual void writePort(int pin) =  0;
	virtual void configPort(int pin) =  0;
};

#endif /* INODE_H_ */
