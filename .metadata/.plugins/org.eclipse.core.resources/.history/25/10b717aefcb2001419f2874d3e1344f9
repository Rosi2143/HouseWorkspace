#ifndef SRC_BASE_H_
#define SRC_BASE_H_


class Base
{
   public:
      Base(std::string _Name);
      virtual ~Base();

      // access functions
      std::string getName() const {
         return Name;
      }

   protected:
      std::string Name;
      unsigned int Id;

};


#endif /* SRC_BASE_H_ */
