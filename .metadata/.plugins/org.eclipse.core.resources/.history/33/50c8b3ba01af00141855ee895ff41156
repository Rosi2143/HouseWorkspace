#ifndef HEATER_H
#define HEATER_H

#include <string>
#include <list>

enum HeaterState
{
   HeaterOn,
   HeaterOff
}HeaterState;

class Heater {
public:
      Heater(unsigned int Id, std::string Name);
      ~Heater();

      // access functions
      std::string getName() const {return Name;}
      HeaterState  getState() const {return State;}

      // construction functions
      void addFloor(const Floor& _Floor);
protected:
      HeaterState  State;
      std::string Name;
};

#endif /* HEATER_H */
