#ifndef SRC_PCFLCD_H_
#define SRC_PCFLCD_H_


class PcfLcd : public INode{
public:
   PcfLcd(unsigned int  pinBase        = MAX7312_MIN_PINBASE,
          unsigned char chipAddress    = MAX7312_ADDRESS,
          unsigned char intPin         = MAX7312_INTPIN,
          unsigned char portDirection1 = 0x00,
          unsigned char portDirection2 = 0x00,
          unsigned char timeoutFlag    = 0x01);
   virtual ~PcfLcd(){}


protected:
   const unsigned char Line[]= {0x80,0x80,0xC0,0x94,0xD4}; // for 4x20 & LCD with two lines
   const unsigned char CharsperLine=20;                  // for 4x20 & LCD with two lines
   //const Line[]= {0x80,0x80,0xC0,0x90,0xD0}; // for 4x16 LCD
   //const CharsperLine=16;                  // for 4x16 LCD

   const unsigned char Addr[] = {0x40,0x42,0x44,0x46,0x48,0x4A,0x4C,0x4E, //PCF8574-addresses
                                0x70,0x72,0x74,0x76,0x78,0x7A,0x7C,0x7E};
   unsigned char _PCF;
   unsigned char _lightOn;
   int ls;
}

#endif /* SRC_PCFLCD_H_ */
