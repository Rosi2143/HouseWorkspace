#include "Switch.h"
#include "House.h"
#include "Room.h"

Switch::Switch(unsigned int _Id, std::string _Name, const Room* _pRoom) :
   State(Unknown), Name(_Name), Id(_Id), pRoom(_pRoom) {
   if (pRoom != nullptr) {
      Name = _pRoom->getName() + Name;
   }
   switchActionMap.clear();
}

Switch::Switch( const Switch &_switch):
      State(_switch.getState(), Name(_switch.getName()), Id()
{

}
