#ifndef HEATER_H
#define HEATER_H

#include <string>
#include <list>

enum HeaterState
{
   HeaterOn,
   HeaterOff
}HeaterState;

class Heater {
public:
      Heater(unsigned int _Id, std::string _Name);
      ~Heater();

      // access functions
      std::string getName() const {return Name;}
      HeaterState  getState() const {return State;}
      HeaterState  toggleState();

      // construction functions
      void addFloor(const Floor& _Floor);
protected:
      HeaterState  State;
      std::string Name;
      unsigned int Id;
};

#endif /* HEATER_H */
