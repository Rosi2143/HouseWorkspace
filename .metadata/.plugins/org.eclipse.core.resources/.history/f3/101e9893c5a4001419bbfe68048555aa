#include "XmlParser.h"
#include <boost/foreach.hpp>
#include <boost/algorithm/string/predicate.hpp>

#define XML_NAME_TAG    "Name"
#define XML_VERSION_TAG "Version"
#define XML_HOUSE_TAG   "House"
#define XML_ROOMS_TAG   "Rooms"
#define XML_ROOM_TAG    "Room"
#define XML_FLOORS_TAG  "Floors"
#define XML_FLOOR_TAG   "Floor"
#define XML_LIGHT_TAG   "Light"
#define XML_BLIND_TAG   "Blind"
#define XML_HEATER_TAG  "Heater"
#define XML_SWITCH_TAG  "Switch"

House readxml(const std::string &filename) {
   // populate tree structure pt
   using boost::property_tree::ptree;
   ptree pt;
   Floor* pFloor;
   Room*  pRoom;
   read_xml(filename, pt);

   // traverse pt
   House house;
   // loop through all floors
   BOOST_FOREACH( ptree::value_type const& xmlFloors, pt.get_child(XML_HOUSE_TAG) ) {
      if (boost::algorithm::iequals(xmlFloors.first, XML_NAME_TAG)) {
         house.Name = xmlFloors.second.data();
      }
      if (boost::algorithm::iequals(xmlFloors.first, XML_VERSION_TAG)) {
         house.Version = std::stoi(xmlFloors.second.data().c_str());
      }
      if (boost::algorithm::iequals(xmlFloors.first, XML_FLOORS_TAG)) {
         BOOST_FOREACH( ptree::value_type const& xmlRoom, xmlFloors.second.get_child(XML_FLOOR_TAG) ) {
            if (boost::algorithm::iequals(xmlFloors.first, XML_NAME_TAG)) {
               pFloor = new Floor;
               pFloor->Name = xmlFloors.second.get<std::string>("<xmlattr>.Name",
                     "NoName");
            }
            // loop through all rooms
            if (boost::algorithm::iequals(xmlFloors.first, XML_ROOMS_TAG)) {
               BOOST_FOREACH( ptree::value_type const& xmlRoom, xmlFloors.second.get_child(XML_ROOM_TAG) ) {
                  pRoom = new Room;;
                  pRoom->Name = xmlpRoom->second.get<std::string>("<xmlattr>.Name",
                        "NoName");
                  // loop through all items in room
                  BOOST_FOREACH( ptree::value_type const& xmlItem, xmlpRoom->second.get_child(XML_ROOM_TAG) ) {
                     if (boost::algorithm::iequals(xmlItem.first, XML_LIGHT_TAG)) {
                        pRoom->Lights.push_back(std::stoi(xmlItem.second.data()));
                     }
                     if (boost::algorithm::iequals(xmlItem.first,
                           XML_HEATER_TAG)) {
                        pRoom->Heaters.push_back(std::stoi(xmlItem.second.data()));
                     }
                     if (boost::algorithm::iequals(xmlItem.first, XML_BLIND_TAG)) {
                        pRoom->Blinds.push_back(std::stoi(xmlItem.second.data()));
                     }
                     if (boost::algorithm::iequals(xmlItem.first,
                           XML_SWITCH_TAG)) {
                        pRoom->Switches.push_back(std::stoi(xmlItem.second.data()));
                     }
                  }
               }
               pFloor->RoomList.push_back(Room);
            }
         }
         house.FloorList.push_back(*pFloor);
      }
   }

   return house;
}

