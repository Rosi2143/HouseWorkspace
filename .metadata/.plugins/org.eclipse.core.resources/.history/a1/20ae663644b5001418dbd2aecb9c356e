#ifndef SRC_BASE_H_
#define SRC_BASE_H_

#include <iostream>

class Base {
   public:
      // Constructors
      Base(unsigned int _Id, std::string _Name) :
            _Name(_Name), _Id(_Id) {
      }
      Base(const Base &_base) :  // copy constructor
            _Name(_base.getName()), _Id(_base.getId()) {
      }  // copy constructor
      virtual ~Base() {
      }

      // access functions
      std::string getName() const {
         return _Name;
      }
      unsigned int getId() const {
         return _Id;
      }

   protected:
      Base() :
            _Name(""), _Id(0) {
         std::cout << "Wrong default constructor Base";
      }
      std::string _Name;
      unsigned int _Id;

};

#endif /* SRC_BASE_H_ */
