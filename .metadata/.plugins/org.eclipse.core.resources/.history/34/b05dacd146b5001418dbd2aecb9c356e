#ifndef HEATER_H
#define HEATER_H

#include <string>
#include <list>
#include <iostream>

#include "Base.h"

typedef enum HeaterState
{
   HeaterOn,
   HeaterOff
}HeaterState;

class Room;

class Heater: public Base {
public:
      // Constructors
      Heater(unsigned int Id, std::string Name, const Room* pRoom);
      Heater(const Heater& heater);  // copy constructor
      virtual ~Heater(){}

      // access functions
      virtual HeaterState  getState() const {return _State;}
      virtual HeaterState  toggleState();

      // construction functions
protected:
      Heater(): Base(0, ""), _State(HeaterOff), _pRoom(nullptr) {
         std::cout << "Wrong default constructor Heater";
      }
      HeaterState  _State;
      Room*        _pRoom;
};

#endif /* HEATER_H */
