#ifndef LIGHT_H_
#define LIGHT_H_

#include <string>
#include <list>

enum LightState
{
   LightOn,
   LightOff
}LightState;

class Light {
public:
      Light();
      ~Light();

      // access functions
      std::string getName() const {return Name;}
      LightState  getState() const {return State;}

      // construction functions
      void addFloor(const Floor& _Floor);
protected:
      LightState  State;
      std::string Name;
      Floors FloorList;
};

#endif /* LIGHT_H_ */
