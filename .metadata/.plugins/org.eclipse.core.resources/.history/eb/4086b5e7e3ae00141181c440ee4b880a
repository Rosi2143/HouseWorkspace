#include <gtest/gtest.h>
#include <gmock/gmock.h>

#include "XmlParserHouse.h"

using namespace std;
using ::testing::_;
using ::testing::Return;
using ::testing::Invoke;
using ::testing::TestWithParam;
using ::testing::Values;
using ::testing::StrCaseEq;

TEST(XmlParser, Read_OK) {
   House _house;
   _house.readxml("src/house.xml");
   ASSERT_EQ(_house.getVersion(), 2);
   std::string Name("St√∂rtenberg 3");
   ASSERT_STRCASEEQ(Name.c_str(), _house.getName().c_str());
   ASSERT_EQ(3, _house.getNumberOfFloors());
   ASSERT_EQ(6, _house.getNumberOfRooms());

   const Floor(_house.getFloor("Basement"));
}
