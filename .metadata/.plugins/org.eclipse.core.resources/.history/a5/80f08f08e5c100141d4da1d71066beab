#include <iostream>

#include "Light.h"

/*!
 *
 * @param Id
 * @param Name
 * @param pRoom
 */
Light::Light(unsigned int Id, std::string Name, const Room* pRoom):
iLight(Id, Name),
_pRoom(pRoom),
{
   if (pRoom != nullptr) {
      _Name = _pRoom->getName() + "_" + Name;
   }
}

/*!
 *
 * @param light
 */
Light::Light(const Light& light){
   iLight(Light), _pRoom(light._pRoom)
}


