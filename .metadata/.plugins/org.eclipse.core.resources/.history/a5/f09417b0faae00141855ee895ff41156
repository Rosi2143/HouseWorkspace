#ifndef HEATER_H
#define HEATER_H

#include <string>
#include <list>

enum BlindState
{
   BlindUp,
   BlindMovingDown,
   BlindDown,
   BlindMovinUp
}BlindState;

class Blind {
public:
      Blind();
      ~Blind();

      // access functions
      std::string getName() const {return Name;}
      BlindState  getState() const {return State;}

      // construction functions
      void addFloor(const Floor& _Floor);
protected:
      BlindState  State;
      std::string Name;
};

#endif /* HEATER_H */
