#include "iInputUser.h"
#include "gmock/gmock.h"

class MockInputUser: public iInputUser {
   public:
      MockInputUser(unsigned int Id, std::string Name) :
            iInputUser(Id, Name) {
      }
      ~MockInputUser() {
      }
      MOCK_METHOD1(OnPress, void());
      MOCK_METHOD1(OnRelease, void());
      MOCK_METHOD1(OnShortPress, void());
      MOCK_METHOD1(OnLongPress, void());
      MOCK_METHOD1(OnVeryLongPress, void());
      MOCK_METHOD1(OnBlocked, void(int time));
   };
