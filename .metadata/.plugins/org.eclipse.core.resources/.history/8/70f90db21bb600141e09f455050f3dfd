#ifndef IBLIND_H
#define IBLIND_H

#include <string>
#include <list>

typedef enum BlindState
{
   BlindUp,
   BlindMovingDown,
   BlindDown,
   BlindMovingUp,
   BlindSomeWhere
}BlindState;

class Room;

class Blind {
public:
      Blind(unsigned int _Id, std::string _Name, const Room* _pRoom);
      virtual ~Blind();

      // access functions
      virtual std::string getName() const = 0;
      virtual BlindState  getState() const = 0;
      virtual BlindState  moveUp() = 0;
      virtual BlindState  moveDown() = 0;

      // construction functions
protected:
};

#endif /* IBLIND_H */
