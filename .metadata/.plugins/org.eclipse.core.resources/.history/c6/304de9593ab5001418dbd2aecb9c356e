#include "Room.h"

Room::Room(unsigned int _Id, std::string _Name, const Room* _pRoom) :
      Base(_Id, _Name), State(Unknown), pRoom(_pRoom) {
   if (pRoom != nullptr) {
      Name = _pRoom->getName() + Name;
   }
   RoomActionMap.clear();
}

Room::Room(const Room &_Room) :
      Base(_Room.Id, _Room.Name), State(_Room.State), pRoom(
            _Room.pRoom), RoomActionMap(_Room.RoomActionMap) {

}

Room& Room::operator=(Room other) {
   if (&other == this) {
      return *this;
   }
   State = other.State;
   RoomActionMap = other.RoomActionMap;
   pRoom = other.pRoom;
   return *this;
}
