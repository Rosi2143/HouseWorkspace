#ifndef SRC_BASE_H_
#define SRC_BASE_H_

#include <iostream>

class Base {
   public:
      // Constructors
      Base(unsigned int _Id, std::string _Name) :
            _Name(_Name), _Id(_Id) {
      }
      Base(const Base &_base) :  // copy constructor
            _Name(_base.getName()), _Id(_base.getId()) {
      }  // copy constructor
      virtual ~Base() {
      }

      // Operators
      Base& operator=(Base other) {
         _Name = other._Name;
         _Id = other._Id;
         return *this;
      }

      // access functions
      virtual std::string getName() const {
         return _Name;
      }
      virtual unsigned int getId() const {
         return _Id;
      }

   protected:
      Base() :
            _Name(""), _Id(0), _State(false), _pRoom(nullptr) {
         std::cout << "Wrong default constructor Base";
      }
      std::string _Name;
      unsigned int _Id;
      bool _State;
      Room* _pRoom;
};

#endif /* SRC_BASE_H_ */
