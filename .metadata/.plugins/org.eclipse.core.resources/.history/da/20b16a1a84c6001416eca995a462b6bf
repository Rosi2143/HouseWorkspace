#include <iostream>

#include "Room.h"
#include "Light.h"

/*!
 *
 * @param Id
 * @param Name
 * @param pRoom
 */
Light::Light(unsigned int Id, std::string Name, iRoom* pRoom):
iLight(Id, Name, pRoom), _State(LightOff)
{
   if (_pRoom != nullptr) {
      _Name = _pRoom->getName() + "_" + Name;
   }
}

/*!
 *
 * @param light
 */
Light::Light(const Light& light) :
      iLight(light), _State(light.getState()){
}

LightState Light::toggleState(){
   if(LightOff == _State) {
      _State = LightOn;
   }
   else {
      _State = LightOff;
   }
   _BaseState = !_BaseState;
   return _State;
}
