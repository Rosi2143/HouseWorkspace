#ifndef ITIMER_H_
#define ITIMER_H_

class iTimer {
   public:
      iTimer(){};
      virtual ~iTimer(){}
      virtual int start_timer(int, int, void (*)(void)) = 0;
      virtual void stop_timer(void) = 0;
};


#endif /* ITIMER_H_ */
